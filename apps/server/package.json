{
  "name": "my-tmux-project-server",
  "version": "0.1.0",
  "description": "Backend server for my-tmux-project platform",
  "main": "dist/index.js",
  "bin": {
    "mcp": "dist/cli/mcp-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "test": "jest --coverage",
    "validate": "npm run lint && npm run test && npm run build",
    "mcp": "ts-node apps/cli/mcp-cli.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.13.0",
    "zod": "^3.22.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@react-native-async-storage/async-storage": "^1.19.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.3.1",
    "@types/commander": "^10.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.0.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": ["prettier --write", "eslint --fix"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/my-tmux-project.git"
  },
  "author": "Your Name <you@example.com>",
  "keywords": [
    "tmux",
    "nodejs",
    "cli",
    "backend",
    "typescript"
  ]
}
