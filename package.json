{
  "name": "my-tmux-project-server",
  "version": "0.1.0",
  "description": "Backend server for my-tmux-project platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --coverage",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.3.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
{
  "scripts": {
    "validate": "ts-node scripts/validate.ts",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "lint": "eslint src/**/*.{ts,tsx} --fix"
  }
}
{
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": ["prettier --write", "eslint --fix"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  }
}
{
  "scripts": {
    "start": "node --optimize-for-size --gc-interval=100 index.js"
  }
}
{
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3"
  }
}
